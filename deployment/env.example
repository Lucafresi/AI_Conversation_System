# AI Conversation System Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://ai_user:ai_password@localhost:5432/ai_conversation

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Keys (fallback providers)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GPT-OSS Configuration (PRIMARY PROVIDER)
GPT_OSS_20B_ENDPOINT=http://localhost:8000/v1
GPT_OSS_120B_ENDPOINT=http://localhost:8001/v1
GPT_OSS_ENABLED=true
GPT_OSS_PREFER_LOCAL=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random

# Service URLs (for local development)
EDGE_GATEWAY_URL=http://localhost:8787
CORE_API_URL=http://localhost:3000
MODEL_ROUTER_URL=http://localhost:3001

# Cloudflare Configuration (for production)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Vercel Configuration (for production)
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
MAX_REQUEST_SIZE_MB=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
REQUEST_TIMEOUT_MS=30000
MAX_CONCURRENT_REQUESTS=100

# GPT-OSS Model Selection
GPT_OSS_DEFAULT_MODEL=gpt-oss-20b
GPT_OSS_MAX_MODEL=gpt-oss-120b
GPT_OSS_COST_OPTIMIZED_MODEL=gpt-oss-20b

# Hardware Detection
AUTO_DETECT_HARDWARE=true
MIN_RAM_FOR_120B=80
GPU_REQUIRED_FOR_120B=true 